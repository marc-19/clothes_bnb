<div class="container my-5">
  <div class="text-center">
    <h1 class="mb-4">Your Dashboard</h1>
    <p class="text-muted">Here are your options:</p>
  </div>

  <div class="row justify-content-center mt-4">
    <div class="col-md-4 text-center">
      <%= link_to "View your Profile", profile_user_path(@user), class: "btn btn-primary btn-lg btn-block mb-3 shadow-sm" %>
    </div>
    <div class="col-md-4 text-center">
      <%= link_to "Create a New Item", new_item_path, class: "btn btn-success btn-lg btn-block mb-3 shadow-sm" %>
    </div>
    <div class="col-md-4 text-center">
      <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-danger btn-lg btn-block shadow-sm" %>
    </div>
  </div>

  <hr class="my-5">

  <div class="text-center">
    <h2>Your Created Items</h2>
    <p class="text-muted">Below is the history of items you've listed.</p>
  </div>

  <div class="row">
    <% @user_items.each do |item| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= item.title %></h5>
            <p class="card-text"><%= item.description %></p>
            <p class="text-muted">Price: â‚¬<%= item.price_per_day %> per day</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
