<div class='full-screen-background'>
  <div class="form-container">
    <h1 class="text-center mb-4 red-title">List Your Item</h1>
    <%= form_with model: @item, url: items_path, local: true, class: "needs-validation" do |form| %>
      <div class="mb-3">
        <%= form.label :title, "Title", class: "form-label" %>
        <%= form.text_field :title, class: "form-control", placeholder: "Enter the title" %>
      </div>

      <div class="mb-3">
        <%= form.label :category, "Category", class: "form-label" %>
        <%= form.select :category, ["Trousers", "T-shirts", "Shoes", "Jackets", "Dresses", "Suits"], {}, class: "form-select" %>
      </div>

      <div class="mb-3">
        <%= form.label :size, "Size", class: "form-label" %>
        <%= form.select :size, ["XS", "S", "M", "L", "XL"], {}, class: "form-select" %>
      </div>

      <div class="mb-3">
        <%= form.label :condition, "Condition", class: "form-label" %>
        <%= form.select :condition, ["Horrible", "Super", "Amazing", "Mid", "Bad", "Don't know"], {}, class: "form-select" %>
      </div>

      <div class="mb-3">
        <%= form.label :price_per_day, "Price Per Day (â‚¬)", class: "form-label" %>
        <%= form.number_field :price_per_day, step: 1.0, min: 0, class: "form-control", placeholder: "Enter the price per day" %>
      </div>

      <div class="mb-3">
        <%= form.label :description, "Description (min 30 characters)", class: "form-label" %>
        <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "Describe your item" %>
      </div>

      <div class="text-center">
        <%= form.submit "Create Item", class: "red-button" %>
      </div>
    <% end %>
  </div>
</div>
